                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Credential Invalid"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
